<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bill_leading_view_tree" model="ir.ui.view">
        <field name="name">bill.leading.tree</field>
        <field name="model">bill.leading</field>
        <field name="arch" type="xml">
            <tree string="Operation">
                <field name="name" />
                <field name="operation_id"/>
                <field name="contract_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="bill_leading_form_view_form" model="ir.ui.view">
        <field name="name">bill.leading.from</field>
        <field name="model">bill.leading</field>
        <field name="arch" type="xml">
            <form>
<!--                 <header>-->
<!--                    <button string="Request Approval" type="object" states="new" name="action_request_approval" class="oe_highlight"/>-->
<!--                    <button string="Approve" type="object" states="request_approval" name="action_approve" class="oe_highlight" groups="first_grain_custom.group_gm,account.group_account_manager"/>-->
<!--                    <button string="Confirm" type="object" states="Wait_ceo_confirm" name="action_confirm" class="oe_read_only" groups="first_grain_custom.group_ceo"/>-->
<!--                    <field name="state" widget="statusbar" />-->
<!--                </header>-->
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <label class="col-form-label" for="name">Number</label>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="operation_id"/>
                            <field name="contract_id"/>
                            <field name="date"/>
                            <field name="quantity"/>
                            <field name="product_type"/>
                            <field name="product_description"/>
                        </group>
                        <group>
                            <field name="vessel"/>
                            <field name="port_leading"/>
                            <field name="port_discharge"/>
                            <field name="original"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="sale_order_type" string="Sale Order Type">
                            <field name="sale_type_ids">
                                <tree editable="bottom">
                                    <field name="sale_order_id"/>
                                    <field name="customer_id"/>
                                    <field name="qty"/>
                                </tree>
                            </field>
                        </page>
                        <page name="delivery_order_type" string="Delivery Order Type">
                            <field name="delivery_order_ids">
                                <tree editable="bottom">
                                    <field name="delivery_order_id"/>
                                    <field name="customer_id"/>
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
<!--                <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids" widget="mail_followers"/>-->
<!--                    <field name="activity_ids" widget="mail_activity"/>-->
<!--                    <field name="message_ids" widget="mail_thread"/>-->
<!--                </div>-->
            </form>
        </field>
    </record>

    <record id="bill_leading_kanban_view_form" model="ir.ui.view">
            <field name="name">bill.leading.kanban</field>
            <field name="model">bill.leading</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <strong><field name="name"/></strong>
                                </div>
                                <div>
<!--                                    <span><field name="notification_status"/>&amp;nbsp;</span>-->
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
    </record>


    <record id="bill_leading_action_main" model="ir.actions.act_window">
        <field name="name">Bill of Lading</field>
        <field name="res_model">bill.leading</field>
        <field name="view_mode">tree,form,kanban</field>
<!--        <field name="search_view_id" ref="user_partner_discount_view_search"/>-->
    </record>

    <menuitem name="Bill of Lading"
              id="bill_leading_menu_first"
              groups="base.group_user"
              sequence="8"
              action="bill_leading_action_main"
              />

    <menuitem name="Bill of Lading"
              id="bill_leading_menu_second"
              action="bill_leading_action_main"
              groups="base.group_user"
              sequence="1"
              parent="bill_leading_menu_first"
              />

</odoo>