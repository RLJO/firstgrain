<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="contract_form_view_tree" model="ir.ui.view">
        <field name="name">contract.form.tree</field>
        <field name="model">contract.form</field>
        <field name="arch" type="xml">
            <tree string="Operation">
                <field name="name" />
                <field name="contract_date"/>
                <field name="vendor"/>
            </tree>
        </field>
    </record>

    <record id="contract_form_view_form" model="ir.ui.view">
        <field name="name">contract.form.from</field>
        <field name="model">contract.form</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                    <button string="Request Approval" type="object" states="new" name="action_request_approval" class="oe_highlight"/>
                    <button string="Approve" type="object" states="request_approval" name="action_approve" class="oe_highlight" groups="first_grain_custom.group_gm,account.group_account_manager"/>
                    <button string="Confirm" type="object" states="Wait_ceo_confirm" name="action_confirm" class="oe_read_only" groups="first_grain_custom.group_ceo"/>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <label class="col-form-label" for="name">Number</label>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="vendor"/>
                             <label for="street" string="Address"/>
                                        <div class="o_address_format">
                                            <field name="street" placeholder="Street..." class="o_address_street"/>
                                            <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                            <field name="city" placeholder="City" class="o_address_city"/>
                                            <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                                            <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                            <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                        </div>
                            <field name="customer"/>
                             <label for="street" string="Address"/>
                                        <div class="o_address_format">
                                            <field name="c_street" placeholder="Street..." class="o_address_street"/>
                                            <field name="c_street2" placeholder="Street 2..." class="o_address_street"/>
                                            <field name="c_city" placeholder="City" class="o_address_city"/>
                                            <field name="c_state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                                            <field name="c_zip" placeholder="ZIP" class="o_address_zip"/>
                                            <field name="c_country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                        </div>
                            <field name="commodity"/>

                            <field name="quantity_note"/>
                            <field name="quantity"/>
                        </group>
                        <group>
                            <field name="source_document_rfq"/>
                            <field name="contract_date"/>
                            <field name="origin"/>
                        </group>
                        <group> <field name="quality"/> </group>
                        <group> <field name="quality_arabic"/> </group>

                        <group> <field name="delivery_term"/> </group>
                        <group> <field name="delivery_term_arabic"/> </group>

                        <group> <field name="shipment_period"/> </group>
                        <group> <field name="shipment_period_arabic"/> </group>

                        <group> <field name="supervision"/> </group>
                        <group> <field name="supervision_arabic"/> </group>

                        <group> <field name="weight"/> </group>
                        <group> <field name="weight_arabic"/> </group>

                        <group> <field name="condition"/> </group>
                        <group> <field name="condition_arabic"/> </group>

                        <group> <field name="price"/></group>
                        <group> <field name="price_arabic"/> </group>

                        <group> <field name="prov_price"/></group>
                        <group> <field name="prov_price_arabic"/> </group>

                        <group> <field name="payment_term"/></group>
                        <group> <field name="payment_term_arabic"/> </group>

                        <group> <field name="protection"/></group>
                        <group> <field name="protection_arabic"/> </group>

                        <group> <field name="fail_pay_dil"/></group>
                        <group> <field name="fail_pay_dil_arabic"/> </group>

                        <group> <field name="load_doc_instruction"/></group>
                        <group> <field name="load_doc_instruction_arabic"/> </group>

                        <group> <field name="discharge"/> </group>
                        <group> <field name="discharge_arabic"/> </group>

                        <group> <field name="licenses"/></group>
                        <group> <field name="licenses_arabic"/></group>

                        <group> <field name="taxation"/> </group>
                        <group> <field name="taxation_arabic"/> </group>

                        <group> <field name="title_risk"/> </group>
                        <group> <field name="title_risk_arabic"/> </group>

                        <group> <field name="low_jurisduction"/> </group>
                        <group> <field name="low_jurisduction_arabic"/> </group>

                        <group> <field name="compliance"/></group>
                        <group> <field name="compliance_arabic"/> </group>

                        <group> <field name="antiboycott"/> </group>
                        <group> <field name="antiboycott_arabic"/></group>

                        <group> <field name="confidentiality"/></group>
                        <group> <field name="confidentiality_arabic"/></group>

                        <group> <field name="assignment_clause"/></group>
                        <group> <field name="assignment_clause_arabic"/></group>

                        <group> <field name="limit_liability"/></group>
                        <group> <field name="limit_liability_arabic"/></group>

                        <group> <field name="terms_conds_rule"/></group>
                        <group> <field name="terms_conds_rule_arabic"/></group>

                        <group> <field name="language"/></group>
                        <group> <field name="language_arabic"/></group>


                        <group string="RFQ Data">
                            <field name="rfq_vendor"/>
                            <field name="limit_up_to"/>
                            <field name="premium_from"/>
                            <field name="purchase_type"/>
                            <field name="monthly_plan"/>

                        </group>

                    </group>
<!--                    <notebook>-->
<!--                        <page name="form4" string="Form 4">-->

<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="contract_kanban_view_form" model="ir.ui.view">
            <field name="name">contract.form.kanban</field>
            <field name="model">contract.form</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <strong><field name="name"/></strong>
                                </div>
                                <div>
                                    <span><field name="notification_status"/>&amp;nbsp;</span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
    </record>


    <record id="contract_action_main" model="ir.actions.act_window">
        <field name="name">Contract</field>
        <field name="res_model">contract.form</field>
        <field name="view_mode">tree,form,kanban</field>
<!--        <field name="search_view_id" ref="user_partner_discount_view_search"/>-->
    </record>

    <menuitem name="Contract"
              id="contract_menu_first"
              groups="base.group_user"
              sequence="8"
              action="contract_action_main"
              />

    <menuitem name="Contract"
              id="contract_menu_second"
              action="contract_action_main"
              groups="base.group_user"
              sequence="1"
              parent="contract_menu_first"
              />

</odoo>