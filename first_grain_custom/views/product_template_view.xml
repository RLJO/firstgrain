<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="product_template_form_view_inherit_firstgrain" model="ir.ui.view">
            <field name="name">product.template.form.inherit.firstgrain</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="account.product_template_form_view"/>
            <field name="arch" type="xml">
               <xpath expr="//page[@name='invoicing']//group[@name='accounting']" position="inside">
                    <field name="analytic_account_id"/>
                </xpath>
                <xpath expr="//page[4]" position="inside">
                    <group>
                        <field name="grar_avarage" string="متوسط كل جرار"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='type']" position="before">
                    <field name="equivalent"/>
                </xpath>
            </field>
        </record>
</odoo>