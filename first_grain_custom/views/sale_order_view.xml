<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="ir.ui.view" id="ale_order_kanban inheit">
                <field name="name">sale_order_kanban</field>
                <field name="model">sale.order</field>
                <field name="inherit_id" ref="sale.view_sale_order_kanban"/>
                <field name="arch" type="xml">
                        <xpath expr="//div[1]" position="inside">
                                <div class="oe_kanban_bottom_left .text-info">
                                      <field name="notifi_state"/>
                                </div>
                        </xpath>
                </field>
        </record>

        <record id="firstgrain_view_order_form" model="ir.ui.view">
            <field name="name">First Grain form view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                        <field name="delivery_method"/>
                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="after">
                    <button name="action_approve_gm_discount" type='object' string="GM Discount approve" states="gm_discount" groups="first_grain_custom.group_gm">
                    </button>
                    <button name="action_approve_ceo_discount" type='object' string="CEO Discount approve" states="ceo_discount" groups="first_grain_custom.group_ceo">
                    </button>
                </xpath>
            </field>
        </record>
</odoo>
