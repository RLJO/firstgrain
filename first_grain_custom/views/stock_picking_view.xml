<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record model="ir.ui.view" id="stock_stock_picking_kanban_inherit">
                <field name="name">picking_kanban</field>
                <field name="model">stock.picking</field>
                <field name="inherit_id" ref="stock.stock_picking_kanban"/>
                <field name="arch" type="xml">
                        <xpath expr="//templates/t/div" position="inside">
                                <div class="row">
                                    <div class="col-12">
                                      <field name="notifi_state"/>
                                    </div>
                                </div>
                        </xpath>
                </field>
        </record>


        <record id="stock_view_picking_form_inherit" model="ir.ui.view">
            <field name="name">First Grain form view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_type_id']" position="after">
                    <field name="operation_id" invisible="1" />
                    <field name="contract_no" />
                    <field name="policy_id" />
                    <field name="vessel" />
                </xpath>
                <xpath expr="//notebook//page[3]" position="after">
                    <page name="bill_leading" string="Bill Leading">
                        <group>
                            <group>
                                <field name="policy_id"/>
                            </group>
                        </group>

                    </page>
                    <page name="vehicle_information" string="Vehicle Information">
                        <field name="vehicle_line">
                            <tree editable="bottom">
                                <field name="driver_name"/>
                                <field name="car_number"/>
                                <field name="car_type"/>
                                <field name="destination"/>
                                <field name="qty"/>

                            </tree>
                        </field>

                    </page>

                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                    <field name="vessel_qty"/>
                </xpath>
            </field>
        </record>
</odoo>
